#!/bin/sh

# sets TEXTGROUNDER environment variables
TEXTGROUNDER_LIB=$TEXTGROUNDER_DIR/lib
DIRLIBS=$TEXTGROUNDER_LIB/trove.jar:$TEXTGROUNDER_LIB/stanford-ner.jar
CP=${TEXTGROUNDER_DIR}/output/classes:${STANFORD_NER_DIR}/stanford-ner.jar:${TEXTGROUNDER_LIB}/sqlitejdbc-v056.jar:${DIRLIBS}:${TEXTGROUNDER_LIB}/commons-cli-1.2.jar:${TEXTGROUNDER_LIB}/jdom.jar
JAVA=$JAVA_HOME/bin/java

if [ -z $JAVA_MEM_FLAG ] 
then
    JAVA_MEM_FLAG=-Xmx2500m
fi

# Now prepares the Java command with the right settings
JAVA_CMD="$JAVA $JAVA_MEM_FLAG -classpath $CP"
