#!/bin/sh

# Run an experiment using geolocate-twitter-wiki, sending its output to a
# unique file and using 'nohup' so that exiting the session won't kill a
# background script.
#
# Allow -i STR or --id STR to be specified at the beginning of the options,
# specifying an ID to use in the outfiles, as in nohup-tg-geolocate.

if [ -z "$TEXTGROUNDER_DIR" ]; then
  echo "Must set TEXTGROUNDER_DIR to top level of TextGrounder distribution"
  exit 1
fi

NOHUP_GEOLOCATE="$TEXTGROUNDER_DIR/bin/nohup-tg-geolocate"

$NOHUP_GEOLOCATE --run-prog geolocate-twitter-wiki ${1+"$@"}
